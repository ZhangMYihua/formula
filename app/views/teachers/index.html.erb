<div class="jumbotron">
  <h1>Hire a teachers from around the world.</h1>
  <h2>Learn a new language today. Teachers on demand.</h2>
</div>

<div class="center">
	<div class="row">
	  <% @teachers.each do |teacher| %>
	    <div class="col-md-3 col-sm-6 teacher-index">
	      <div class="thumbnail">
	        <%= image_tag teacher.avatar.url %>
	        <div class="caption">
	          <h3><%= link_to "#{teacher.first_name} #{teacher.last_name}", teacher %></h3>
	          <p>Teaching: <%= teacher.subject %></p>
	          <p>$<%= teacher.price %></p>
	        </div>
	      </div>
	    </div>
	  <% end %>
	</div>
</div>

<br>
