<div class="center">
	<div class="row">
	  <% @teachers.each do |teacher| %>
	    <div class="col-md-3 col-sm-6 teacher-index">
	      <div class="thumbnail">
	        <%= image_tag teacher.avatar.url %>
	        <div class="caption">
	          <h3><%= "#{teacher.first_name} #{teacher.last_name}" %></h3>
	          <p>Teaching: <%= teacher.subject %></p>
	          <p>$<%= teacher.price %></p>
	          <%= link_to 'Show', teacher, class: "btn btn-link" %>
            <% if (user_signed_in?) && (current_user == teacher.user) %>
              <%= link_to 'Edit', edit_teacher_path(teacher), class: "btn btn-link" %>
            <% end %>
	        </div>
	      </div>
	    </div>
	  <% end %>
	</div>
</div>

<br>


<% if user_signed_in? %>
	<%= link_to 'New Teacher', new_teacher_path, class: "btn btn-link" %>
<% end %>