<div class="col-sm-12">
	
	<div class="row">
		<h1>Listing Availabilities</h1>
	</div>

	<div class="col-sm-2">
		<%= link_to 'Add an availability', new_teacher_availability_path, class: "btn btn-primary" %>
	</div>

	<div class="col-sm-8">
		<table class="table">
		  <thead>
		    <tr>
		      <th>Start time</th>
		      <th>End time</th>
		      <th>Teacher</th>
		      <th colspan="3"></th>
		    </tr>
		  </thead>

		  <tbody>
		    <% @availabilities.each do |availability| %>
		      <tr>
		        <td><%= availability.start_time %></td>
		        <td><%= availability.end_time %></td>
		        <td><%= availability.teacher_id %></td>
		        <td><%= link_to 'Show', teacher_availabilities_path %></td>
		        <td><%= link_to 'Edit', edit_teacher_availability_path(@teacher, availability) %></td>
		        <td><%= link_to 'Destroy', teacher_availability_path(@teacher, availability), method: :delete, data: { confirm: 'Are you sure?' } %></td>
		      </tr>
		    <% end %>
		  </tbody>
		</table>

	</div>
</div>