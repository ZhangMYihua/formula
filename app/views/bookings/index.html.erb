<p id="notice"><%= notice %></p>
<div class="row">
  <div class="col-sm-10 col-sm-offset-1">
    <div class="page-header">
      <h2>
        Your Upcoming Classes
      </h2>
    </div>

<br>
<br>
<br>
<br>
    <table class="table">
     <thead>
        <tr>
          <th>Start date</th>
          <th>Start time</th>
          <th>End date</th>
          <th>End time</th>
          <th>Student</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @bookings.each do |booking| %>
          <tr>
            <td><%= booking.start_time.in_time_zone(@teacher.user.time_zone).strftime("%b %e") %></td>
            <td><%= booking.start_time.in_time_zone(@teacher.user.time_zone).strftime(" %I:%M %p") %></td>
            <td><%= booking.end_time.in_time_zone(@teacher.user.time_zone).strftime("%b %e") %></td>
            <td><%= booking.end_time.in_time_zone(@teacher.user.time_zone).strftime("%I:%M %p") %></td>
            <td><%= link_to "#{booking.student.username}", user_path(booking.student.id)  %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

  </div>
</div>
